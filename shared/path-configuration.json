{
  "settings": {
    "screenshots_enabled": true
  },
  "rules": [
    {
      "patterns": [
        ".*"
      ],
      "properties": {
        "context": "default",
        "uri": "hotwire://fragment/web",
        "pull_to_refresh_enabled": true
      }
    },
    {
      "patterns": [
        "/new$",
        "/edit$",
        ".*/new$",
        ".*/edit$"
      ],
      "properties": {
        "context": "modal",
        "uri": "hotwire://fragment/web/modal"
      }
    },
    {
      "patterns": [
        "/auth/login.*",
        "/auth/create-account.*",
        "/auth/verify.*",
        "/signup"
      ],
      "properties": {
        "context": "modal",
        "uri": "hotwire://fragment/web/modal"
      }
    },
    {
      "patterns": [
        "/onboarding.*",
        "/onboardings/wizard.*"
      ],
      "properties": {
        "context": "modal",
        "uri": "hotwire://fragment/web/modal"
      }
    },
    {
      "patterns": [
        "/orders/new.*",
        "/orders/.*/payment_summary.*",
        "/pass_packages/.*/purchase.*",
        "/pass_packages/.*/payment_summary.*"
      ],
      "properties": {
        "context": "modal",
        "uri": "hotwire://fragment/web/modal"
      }
    },
    {
      "patterns": [
        "/events/.*/reviews/new.*",
        "/event_series/.*/reviews/new.*"
      ],
      "properties": {
        "context": "modal",
        "uri": "hotwire://fragment/web/modal"
      }
    },
    {
      "patterns": [
        "/settings.*"
      ],
      "properties": {
        "context": "default",
        "uri": "hotwire://fragment/web"
      }
    },
    {
      "patterns": [
        "/admin.*"
      ],
      "properties": {
        "context": "default",
        "uri": "hotwire://fragment/web",
        "pull_to_refresh_enabled": false
      }
    }
  ]
}
